<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhang.myhome.DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:paddingLeft="20dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/detail_name_value"
            android:layout_toRightOf="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="castle"
            android:paddingLeft="20dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/detail_type"
            android:layout_toRightOf="@+id/detail_name_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type:"
            android:paddingLeft="20dp"
            android:textSize="25dp"/>
        <TextView
            android:id="@+id/detail_type_value"
            android:layout_toRightOf="@+id/detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="house"
            android:paddingLeft="20dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/detail_size"
            android:layout_below="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size:"
            android:layout_marginTop="15dp"
            android:paddingLeft="20dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/detail_size_value"
            android:layout_below="@+id/detail_name"
            android:layout_toRightOf="@+id/detail_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:layout_marginTop="15dp"
            android:paddingLeft="40dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/detail_cost"
            android:layout_below="@+id/detail_name"
            android:layout_toRightOf="@+id/detail_size_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cost:"
            android:layout_marginTop="15dp"
            android:paddingLeft="40dp"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/detail_cost_value"
            android:layout_below="@+id/detail_name"
            android:layout_toRightOf="@+id/detail_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1500"
            android:layout_marginTop="15dp"
            android:paddingLeft="30dp"
            android:textSize="25dp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/descript"
        android:layout_below="@+id/detail_name"
        android:layout_toRightOf="@+id/detail_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descript: "
        android:layout_marginTop="15dp"
        android:paddingLeft="30dp"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/descript_content"
        android:layout_below="@+id/detail_name"
        android:layout_toRightOf="@+id/detail_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descript: "
        android:layout_marginTop="15dp"
        android:paddingLeft="30dp"
        android:textSize="25dp"/>
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content">
        <Button
            android:id="@+id/rent_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent"/>

  </RelativeLayout>

    </LinearLayout>
</ScrollView>
